<!--========================-->
<!-- CAMERA MAST + SLIDER  -->
<!--========================-->

<link name="camera_mast_link">
    <inertial>
        <mass value="0.25"/>
        <inertia ixx="0.003" ixy="0.0" ixz="0.0" iyy="0.003" iyz="0.0" izz="0.0015"/>
    </inertial>
    <visual>
        <geometry>
            <box size="0.04 0.08 0.5"/>
        </geometry>
        <material name="dark_gray">
            <color rgba="0.2 0.2 0.2 1.0"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <box size="0.08 0.06 0.35"/>
        </geometry>
    </collision>
</link>

<joint name="camera_mast_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_mast_link"/>
    <origin xyz="0.22 0.0 0.275" rpy="0 0 0"/>
</joint>


<joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.571 0 -1.571"/>
    <parent link="camera_body_link"/>
    <child link="camera_link_optical"/>
</joint>

<link name="camera_link_optical"></link>


<link name="camera_slider_link">
    <inertial>
        <mass value="0.08"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
        <geometry>
            <box size="0.02 0.06 0.08"/>
        </geometry>
        <material name="light_gray">
            <color rgba="0.6 0.6 0.6 1.0"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <box size="0.06 0.06 0.08"/>
        </geometry>
    </collision>
</link>

<joint name="camera_slide_joint" type="prismatic">
    <parent link="camera_mast_link"/>
    <child link="camera_slider_link"/>
    <origin xyz="0.03 0.0 -0.06" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.2" effort="50.0" velocity="0.25"/>
    <dynamics damping="5.0" friction="0.2"/>
</joint>

<link name="camera_body_link">
    <inertial>
        <mass value="0.05"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
        <geometry>
            <box size="0.08 0.08 0.08"/>
        </geometry>
        <material name="camera_red">
            <color rgba="0.75 0.08 0.08 1.0"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <box size="0.08 0.08 0.08"/>
        </geometry>
    </collision>
</link>

<joint name="camera_body_joint" type="fixed">
    <parent link="camera_slider_link"/>
    <child link="camera_body_link"/>
    <origin xyz="0.05 0.0 0.0" rpy="0 0 0"/>
</joint>

<link name="camera_lens_link">
    <inertial>
        <mass value="0.02"/>
        <inertia ixx="0.00002" ixy="0.0" ixz="0.0" iyy="0.00002" iyz="0.0" izz="0.00002"/>
    </inertial>
    <visual>
        <origin xyz="0 0 0" rpy="0 1.5708 0"/>
        <geometry>
            <cylinder radius="0.035" length="0.01"/>
        </geometry>
        <material name="lens_black">
            <color rgba="0.03 0.03 0.03 1.0"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 1.5708 0"/>
        <geometry>
            <cylinder radius="0.015" length="0.04"/>
        </geometry>
    </collision>
</link>

<joint name="camera_lens_joint" type="fixed">
    <parent link="camera_body_link"/>
    <child link="camera_lens_link"/>
    <origin xyz="0.045 0.0 0.0" rpy="0 0 0"/>
</joint>

<link name="camera_optical_frame"/>

<joint name="camera_optical_frame_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
    <parent link="camera_lens_link"/>
    <child link="camera_optical_frame"/>
</joint>


<!--===============================-->
<!-- GAZEBO CLASSIC SURFACE PARAMS -->
<!--===============================-->

<!-- Base friction can be moderate -->
<gazebo reference="base_link">
  <material>Gazebo/Blue</material>
  <ambient>0.08 0.08 0.30 1.0</ambient>
  <diffuse>0.12 0.12 0.85 1.0</diffuse>
  <specular>0.15 0.15 0.15 1.0</specular>
  <mu1>0.6</mu1>
  <mu2>0.6</mu2>
  <kp>1000000.0</kp>
  <kd>100.0</kd>
</gazebo>

<gazebo reference="camera_mast_link">
  <material>Gazebo/Grey</material>
</gazebo>

<gazebo reference="camera_slider_link">
  <material>Gazebo/LightGrey</material>
</gazebo>

<gazebo reference="camera_body_link">
  <material>Gazebo/Red</material>
</gazebo>

<gazebo reference="camera_lens_link">
  <material>Gazebo/Black</material>
</gazebo>

<gazebo reference="camera_lens_link">
  <sensor type="camera" name="front_camera">
    <always_on>true</always_on>
    <update_rate>30.0</update_rate>
    <visualize>true</visualize>
    <camera>
      <horizontal_fov>1.047</horizontal_fov>
      <image>
        <width>640</width>
        <height>480</height>
        <format>R8G8B8</format>
      </image>
      <clip>
        <near>0.05</near>
        <far>50.0</far>
      </clip>
    </camera>
    <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
      <camera_name>front_camera</camera_name>
      <frame_name>camera_optical_frame</frame_name>
    </plugin>
  </sensor>
</gazebo>


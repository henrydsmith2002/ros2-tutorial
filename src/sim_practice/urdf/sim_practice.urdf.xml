<?xml version="1.0"?>
<!--<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="practice_rover">-->
<robot name="practice_rover">

<!--==========-->
<!--WORLD_LINK-->
<!--==========-->
<link name="world"/>

<joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 .2" rpy="0 0 0"/>
</joint>


<!--=========-->
<!--BASE_LINK_ROOT-->
<!--=========-->

<link name="base_link">
    <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>

    <visual>
        <geometry>
            <box size="0.5 0.4 0.2"/>
        </geometry>
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>

    <!-- Collision for physics -->
    <collision>
        <geometry>
            <box size="0.5 0.4 0.2"/>
        </geometry>
    </collision>
</link>

<!--==========-->
<!--WHEELS_SIX-->
<!--==========-->

<!--front_left-->
<link name="wheel_fl_link">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>

    <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
    </collision>
</link>

<joint name="wheel_fl_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fl_link"/>
    <origin xyz="0.35 0.3 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!-- Damping helps stability in Gazebo -->
    <dynamics damping="0.5" friction="0.1"/>
</joint>

<!--front_right-->
<link name="wheel_fr_link">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>

    <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
    </collision>
</link>

<joint name="wheel_fr_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fr_link"/>
    <origin xyz="0.35 -0.3 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.5" friction="0.1"/>
</joint>

<!--mid_left-->
<link name="wheel_ml_link">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>

    <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
    </collision>
</link>

<joint name="wheel_ml_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_ml_link"/>
    <origin xyz="0.05 0.3 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.5" friction="0.1"/>
</joint>

<!--mid_right-->
<link name="wheel_mr_link">

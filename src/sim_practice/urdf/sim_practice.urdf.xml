<!--=========-->
<!--BASE_LINK_ROOT-->
<!--=========-->

<link name="base_link">
    <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>

    <visual>
        <geometry>
            <box size="0.5 0.4 0.2"/>
        </geometry>
        <material name="blue">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>

    <!-- Collision for physics -->
    <collision>
        <geometry>
            <box size="0.5 0.4 0.2"/>
        </geometry>
    </collision>
</link>


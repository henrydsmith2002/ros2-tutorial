<!--WHEELS_SIX-->
<!--==========-->

<!--front_left-->
<link name="wheel_fl_link">
    <inertial>
        <mass value="0.5"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>

    <visual>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1"/>
        </material>
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.15"/>
        </geometry>
    </collision>
</link>

<joint name="wheel_fl_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_fl_link"/>
    <origin xyz="0.35 0.3 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <!-- Damping helps stability in Gazebo -->
    <dynamics damping="0.5" friction="0.1"/>
</joint>


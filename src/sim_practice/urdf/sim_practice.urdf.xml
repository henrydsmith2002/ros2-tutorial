<!--===============================-->
<!-- GAZEBO CLASSIC SURFACE PARAMS -->
<!--===============================-->

<!-- Base friction can be moderate -->
<gazebo reference="base_link">
  <mu1>0.6</mu1>
  <mu2>0.6</mu2>
  <kp>1000000.0</kp>
  <kd>100.0</kd>
</gazebo>

<!-- Wheels: higher friction + stable contact -->
<gazebo reference="wheel_fl_link">
  <mu1>1.2</mu1>
  <mu2>1.2</mu2>
  <kp>1000000.0</kp>
  <kd>100.0</kd>
</gazebo>

<gazebo reference="wheel_fr_link">
  <mu1>1.2</mu1>
  <mu2>1.2</mu2>
